<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CreateFeedFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/fragment_create_feed_toolbar"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Create feed" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fragment_create_feed_essential_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/fragment_create_feed_toolbar"
                app:layout_constraintBottom_toTopOf="@+id/fragment_create_feed_additional_group"
                android:layout_margin="16dp" >

                <TextView
                    android:id="@+id/fragment_create_feed_essential_group_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Essential"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/fragment_create_feed_name_input" >
                </TextView>

                <EditText
                    android:id="@+id/fragment_create_feed_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_create_feed_essential_group_title"
                    app:layout_constraintBottom_toTopOf="@+id/fragment_create_feed_url_input"
                    android:hint="Name"/>

                <EditText
                    android:id="@+id/fragment_create_feed_url_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_create_feed_name_input"
                    android:hint="URL"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_create_feed_additional_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/fragment_create_feed_essential_group"
            android:layout_margin="16dp" >

            <TextView
                android:id="@+id/fragment_create_feed_additional_group_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Additional"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/fragment_create_feed_description_input" >
            </TextView>

            <EditText
                android:id="@+id/fragment_create_feed_description_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/fragment_create_feed_additional_group_title"
                android:hint="Description"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/fragment_create_feed_submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Create"
            android:layout_margin="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>